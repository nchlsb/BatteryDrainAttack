<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.johnb.motionsensor3in1.theCombination">

    <TextView
        android:id="@+id/light2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Magnetometer"
        android:layout_marginEnd="125dp"
        android:text="Light" />

    <TextView
        android:id="@+id/LightData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Light"
        android:layout_alignTop="@+id/MagneticData"
        android:text="LightData"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TempuratureData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Tempurature"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="228dp"
        android:text="TempuratureData"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Magnetometer"
        android:layout_marginEnd="125dp"
        android:text="Light" />

    <TextView
        android:id="@+id/WakeLockStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/LightData"
        android:text="None" />

    <TextView
        android:id="@+id/Tempurature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Light"
        android:layout_marginTop="205dp"
        android:text="Tempurature" />

    <TextView
        android:id="@+id/GyroscopeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/AccelerometerData"
        android:layout_marginEnd="89dp"
        android:text="GyroscopeData" />

    <TextView
        android:id="@+id/Gyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/GyroscopeData"
        android:layout_alignTop="@+id/Gyroscope"
        android:text="Gyroscope"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/AccelerometerData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Magnetometer"
        android:layout_marginBottom="89dp"
        android:text="AccelerometerData" />

    <TextView
        android:id="@+id/Gyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Magnetometer"
        android:layout_marginBottom="139dp"
        android:text="Accelerometer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Magnetometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/GyroScopeData"
        android:layout_marginTop="51dp"
        android:text="Magnetometer" />

    <TextView
        android:id="@+id/MagneticData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/GyroScopeData"
        android:layout_below="@+id/Magnetometer"
        android:layout_marginTop="40dp"
        android:text="Magnetic"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>
